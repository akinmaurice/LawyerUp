mixin contactForm()
  .col-lg-6.col-md-6-col-sm-12
    .card.my-4
      .card-header
        h4 Send Us a Message
      .card-body
        form(method="post").form-contact
          .form-group
            input(type="text" name="name" id="name" placeholder="Full Name").form-control.form-control-lg
          .form-group
            input(type="email" name="email" id="email" placeholder="Email Address").form-control.form-control-lg
          .form-group
            input(type="phone" name="phone" id="phone" placeholder="Phone Number").form-control.form-control-lg
          .form-group
            textarea(rows="10" name="message" placeholder="Your Message").form-control
          .form-group
            button(type="submit").btn.btn-primary.btn-lg Send Us a Message