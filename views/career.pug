extends layout

include mixins/_navigationCard
include mixins/_jobCard

block content
  //- Div for JUMBOTRON HEADER
  .jumbotron
    .container.text-center
      br
      .row
        .col-lg-12
          br
          br
          h2 Join #{h.siteName}
          p Help us provide better service to people
          a.btn.btn-lg.btn-career(href="#") View Open Positions
          br
          br
          br
  //- Div for WHO WE ARE
  .container
    .row
      .col-lg-12.text-center
        h2 Who we are
        br
  //- Div for WHO WE ARE CONTENT TEXT
  .container
    .row
      .col-lg-3
      .col-lg-6
        p.text-about.text-center #{h.careers}
      .col-lg-3
    br
  //- Div for Open Positions
  .container
    .row
      .col-lg-12.text-center
        h2 Open Positions
        br
        br
  //- DIV FOR JOBS IF ANY INCLUDE THE CARD MIXIN HERE
  .container-fluid
    .row
      .col-lg-2
      .col-lg-8.text-center
        each job in h.jobs
          +jobCard(job)
      .col-lg-2
    br
    br
    br
block footer
