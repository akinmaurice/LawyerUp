extends layout

include mixins/_navigationCard
include mixins/_lawyerCard
include mixins/_directoryPagination
include mixins/_tagNav

block content
  +navigationCard(title)
  .container-fluid
    .row
      .col-lg-9
        if lawyers.length >= 1
          ul.list-inline
            each t in tags
              +tagNav(t)
    .row
      .col-lg-9
        if lawyers.length >= 1
          each lawyer in lawyers
            +lawyerCard(lawyer)
          +pagination(page, pages, count)
        else
          .alert.alert-danger No Lawyers yet
      .col-lg-3
    br
    br
block footer
