doctype html
html

head
  meta(name="viewport" content="width=device-width")
  meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
  style
    include styles.css
body
  table.body(border="0" cellpadding="0" cellspacing="0")
    tr
      td &nbsp;
      td.container
        .content
          span.preheader Complete Account Registration
          table.main
            tr
              td.wrapper
                table(border="0" cellpadding="0" cellspacing="0")
                  tr
                    td
                      p Hi #{mail}
                      p Kindly activate your account by clicking the button below or by following the link provided below.
                      table(border="0" cellpadding="0" cellspacing="0").btn.btn-primary
                        tbody
                          tr
                            td(align="left")
                              table(border="0" cellpadding="0" cellspacing="0")
                                tbody
                                  tr
                                    td
                                      a(href=`${activationLink}`) Activate your account
                      p #{activationLink}
            .footer
              table(border="0" cellpadding="0" cellspacing="0")
                tr
                  td.content-block
                    span.apple-link Comany Address Here
                    br
                    p Unsubscibe
      td &nbsp;
